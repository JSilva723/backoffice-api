{
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "module": "CommonJS",
        "target": "es2022",
        "esModuleInterop": true,
        "strict": true,
        "sourceMap": true,
        "inlineSources": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "paths": {
            "@presentation/*": [
                "./src/presentation/*"
            ],
            "@context/*": [
                "./src/context/*"
            ],
            "@config/*": [
                "./src/config/*"
            ],
            "@shared/*": [
                "./src/shared/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}